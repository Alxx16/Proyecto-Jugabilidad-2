<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PareoActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_fondo">

    <ImageView
        android:id="@+id/imgPareo1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:nextFocusLeft="@id/pgrPareo"
        android:src="@drawable/ic_home_icono" />

    <ProgressBar
        android:id="@+id/pgrPareo"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/imgPareo1"
        android:indeterminateDrawable="@drawable/progress_bar_jugabilidades"
        android:max="11"
        android:min="1"
        android:minWidth="300dp"
        android:minHeight="50dp"

        />

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgPareo1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Eligé la combinación correcta"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ListView
        android:id="@+id/lstPareo1"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblTitulo"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:backgroundTint="@color/white"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="20dp" />

    <ListView
        android:id="@+id/lstPareo2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:divider="#00000000"
        android:dividerHeight="20dp"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/white"
        android:layout_below="@id/lblTitulo"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:cacheColorHint="#00000000"/>

    <Button
        android:id="@+id/btnPareoSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:enabled="false"
        android:visibility="invisible"
        android:text="SIGUIENTE"
        />

</RelativeLayout>